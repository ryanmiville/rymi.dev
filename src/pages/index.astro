---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Ryan Miville";
const description = "Web developer and data engineer.";
const permalink = Astro.site!.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div
    class="flex-col md:flex-row items-center flex justify-center my-8 min-h-[400px]"
  >
    <div class="pb-8 text-center md:flex-1 md:px-4 md:text-start">
      <p class="font-mono font-semibold text-2xl">Hi, I&apos;m</p>
      <h1
        class="text-7xl bg-clip-text text-transparent bg-gradient-to-r from-purple-400 via-orange-200 to-orange-200 font-bold"
      >
        Ryan Miville
      </h1>
      <p class="text-4xl font-semibold">
        Backend Web Developer and Data Engineer
      </p>
    </div>

    <div class="mx-4 text-center">
      <picture class="block min-h-[250px]">
        <source
          srcset="/assets/home-illustration.webp"
          media="(min-width: 600px)"
        />
        <img
          class="w-full xl:max-w-xl mb-4 md:max-w-sm"
          alt="Illustration of person reading a book"
          src="/assets/home-illustration-small.webp"
          width="550"
          height="466"
        />
      </picture>
      <p class="text-xs italic text-left">
        Illustration by
        <a
          href="https://icons8.com/illustrations/author/5c07e68d82bcbc0092519bb6"
          target="_blank"
          rel="noopener">Icons 8</a
        >
         from
        <a
          href="https://icons8.com/illustrations"
          target="_blank"
          rel="noopener">Ouch!</a
        >
      </p>
    </div>
  </div>
</BaseLayout>

