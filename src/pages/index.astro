---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Ryan Miville";
const description = "Web developer and data engineer.";
const permalink = Astro.site!.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="flex-col flex my-8">
    <div class="pb-8 md:flex-1 md:px-4 md:text-start">
      <h1 class="text-5xl font-bold inline-block">
        <!-- <span class="block">Hi,</span> -->
        <span class="block">Hi, I&apos;m</span>
        <span
          class="text-8xl text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-orange-200"
          >Ryan Miville</span
        >
      </h1>
    </div>

    <div
      class="sm:max-w-[780px] ml-1/6 md:ml-[33%] transition-all duration-300 text-5xl"
    >
      <!-- <div class="mx-4 text-right text-3xl font-semibold md:text-justify"> -->
      <p>web developer and data engineer</p>
    </div>
  </div>
</BaseLayout>
